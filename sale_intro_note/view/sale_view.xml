<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_order_form_sale_intro_note" model="ir.ui.view">
            <field name="name">sale.order.form.sale.intro.note</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='note']" position="before">
                        <field name="intro_note" class="oe_inline" placeholder="Introduction..."/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>

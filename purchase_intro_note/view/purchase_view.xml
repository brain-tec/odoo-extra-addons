<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="purchase_order_form_purchase_intro_note" model="ir.ui.view">
            <field name="name">purchase.order.form.purchase.intro.note</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='notes']" position="before">
                        <field name="intro_note" class="oe_inline" placeholder="Introduction..."/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>

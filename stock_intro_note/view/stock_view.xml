<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_picking_form_intro_note" model="ir.ui.view">
            <field name="name">stock.picking.form.intro.note</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//sheet/notebook" position="after">
                        <field name="intro_note" class="oe_inline" placeholder="Introduction..."/>
                        <field name="after_note" class="oe_inline" placeholder="Ending Note..."/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>

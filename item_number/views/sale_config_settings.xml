<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_sales_config" model="ir.ui.view">
            <field name="name">sale.config.settings.inherit</field>
            <field name="inherit_id" ref="sale.view_sales_config"/>
            <field name="model">sale.config.settings</field>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='Sale Features']" position="inside">
                    <div name="module_item_number">
                        <field name="module_item_number" class="oe_inline"/>
                        <label for="module_item_number"/>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="invoice_supplier_form_intro_note" model="ir.ui.view">
            <field name="name">invoice.supplier.form.intro.note</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//sheet/notebook" position="after">
                        <field name="intro_note" class="oe_inline" placeholder="Introduction..."/>
                        <field name="after_note" class="oe_inline" placeholder="Ending Note..."/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="invoice_form_intro_note" model="ir.ui.view">
            <field name="name">invoice.form.intro.note</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//sheet/notebook" position="after">
                        <field name="intro_note" class="oe_inline" placeholder="Introduction..."/>
                        <field name="after_note" class="oe_inline" placeholder="Ending Note..."/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
